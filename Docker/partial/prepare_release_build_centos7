# install sqlite3 because too old in centos7 repo
RUN mkdir -p sqlite && cd sqlite && cmake ../dextool/vendor/sqlite3
RUN cd sqlite && make

# something borks out when expanding a variable holding the ld flags.
# therefore LIBCLANG_LD_FLAGS are hard coded here.
RUN mkdir -p build && cd build && cmake ../dextool -DCMAKE_BUILD_TYPE=Release $LIBLLVM_CXX_EXTRA_FLAGS -DSQLITE3_LIB="-L/opt/sqlite -lsqlite3" -DLIBCLANG_LDFLAGS="-Wl,--enable-new-dtags -Wl,--no-as-needed -L/opt/rh/llvm-toolset-7/root/usr/lib64/ -Wl,-rpath /opt/rh/llvm-toolset-7/root/usr/lib64/ -l:libclang.so"
